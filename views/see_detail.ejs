    <%dataList.forEach(data =>{%>
       

    <title><%= data.fname %> Details</title>
</head>
<body>
<header>
        
    <a style="color: rgb(0, 0, 0);" href="http://localhost:8080/getDataForWorker"> <button   style="border-collapse: collapse; color: rgb(7, 7, 7);" ><span class="material-symbols-rounded" id="btnLanguage">
        home
        </span></button></a>
</header>

<center><div class="container mt-5 mb-5">
    <div class="row no-gutters">
        <div class="col-md-4 col-lg-4"><img src="/Images_of_students/<%=  data.image %>"></div>
        <div class="col-md-8 col-lg-8">
            <div class="d-flex flex-column">
                <div class="d-flex flex-row justify-content-between align-items-center p-5 bg-dark text-white">
                    <h3 class="display-5"> <%= data.fname %>  <%= data.lname %></h3><i class="fa fa-phone"> :  <%= data.phone %></i></div>
                <div class="p-3 bg-black text-white">
                    <h4> <%= data.Department %></h4>
                </div>
                <div class="d-flex flex-row text-white">
                    <div class="p-4 bg-primary text-center skill-block">
                      
                        <h4>Bond in Years</h4>
                        <h6><%= data.bond_for_days %></h6>
                    </div>
                    <div class="p-3 bg-success text-center skill-block">
                        
                        <h4>Experience in Years</h4>
                        <h6><%= data.experience %></h6>
                    </div>
                    <div class="p-3 bg-warning text-center skill-block">
                        
                        <h4>Previous Job</h4>
                        <h6><%= data.Previous_comp %></h6>
                    </div>
                    <div class="p-3 bg-danger text-center skill-block">
                       
                        <h4>Designation</h4>
                        <h6> <%= data.Department %></h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%})%>
</center>



</body>
</html>

